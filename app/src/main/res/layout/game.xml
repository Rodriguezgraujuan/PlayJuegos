<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="78dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="#FFD9E1"
                android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_game_icon1"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/games_angrybirds"
            android:contentDescription="Icono del juego"/>

        <CheckBox
            android:id="@+id/cb_game_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angry Birds"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#FFD9E1"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_game_icon2"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/games_dragonfly"
            android:contentDescription="Icono del juego"/>

        <CheckBox
            android:id="@+id/cb_game_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dragon Fly"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#FFD9E1"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_game_icon3"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/games_hillclimbingracing"
            android:contentDescription="Icono del juego"/>

        <CheckBox
            android:id="@+id/cb_game_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hill Climbing Racing"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#FFD9E1"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_game_icon4"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/games_radiantdefense"
            android:contentDescription="Icono del juego"/>

        <CheckBox
            android:id="@+id/cb_game_name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radiant Defense"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#FFD9E1"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_game_icon5"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/games_pocketsoccer"
            android:contentDescription="Icono del juego"/>

        <CheckBox
            android:id="@+id/cb_game_name5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pocket Soccer"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#FFD9E1"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/iv_game_icon6"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/games_ninjump"
            android:contentDescription="Icono del juego"/>

        <CheckBox
            android:id="@+id/cb_game_name6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ninja Jump"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_send"
        app:backgroundTint="@color/celeste"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>



